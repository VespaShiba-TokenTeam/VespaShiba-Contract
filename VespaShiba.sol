            feeFlag = true;
            removeAllFee();
        } else if (from == uniswapV2Pair) {
            // fee will be discounted when user buy token
            changeBuyingFee();
            feeFlag = true;
        }

        _tokenTransfer(from, to, amount);

        if (feeFlag) restoreAllFee();
